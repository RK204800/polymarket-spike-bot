# ============================================================
# Polymarket Spike Reversal Bot - Environment Configuration
# ============================================================

# Wallet Configuration
PK=your_private_key_here
YOUR_PROXY_WALLET=your_polymarket_proxy_wallet_address
BOT_TRADER_ADDRESS=your_metamask_wallet_address

# Contract Addresses (defaults for Polygon mainnet)
USDC_CONTRACT_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
POLYMARKET_SETTLEMENT_CONTRACT=0x56C79347e95530c01A2FC76E732f9566dA16E113
WEB3_PROVIDER=https://polygon-rpc.com

# ============================================================
# TRADING PARAMETERS (customize these!)
# ============================================================

# Spike detection - trigger trade when price moves this much (as decimal)
# 0.02 = 2% price movement triggers a reversal trade
SPIKE_THRESHOLD=0.02

# Take profit - exit position when profit reaches this %
# 0.03 = 3% profit target
TAKE_PROFIT_PCT=0.03

# Stop loss - exit position when loss reaches this %
# -0.025 = -2.5% stop loss
STOP_LOSS_PCT=-0.025

# Trade size in USDC
TRADE_UNIT=3.0

# Maximum concurrent open trades
MAX_CONCURRENT_TRADES=3

# Minimum liquidity required to place a trade (USDC)
MIN_LIQUIDITY=10.0

# Maximum slippage tolerance
SLIPPAGE_TOLERANCE=0.02

# Maximum time to hold a position (seconds)
# 3600 = 1 hour
HOLDING_TIME_LIMIT=3600

# Price history size for spike detection
PRICE_HISTORY_SIZE=100

# Cooldown period between trades on same asset (seconds)
COOLDOWN_PERIOD=30

# ============================================================
# NOTIFICATIONS (optional)
# ============================================================

# Discord webhook URL for trade notifications
# Get this from your Discord server: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# Generic callback URL (optional, for custom integrations)
CALLBACK_URL=
